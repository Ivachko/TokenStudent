<link href="../css/bootstrap.css" rel="stylesheet">
<link href="../font-awesome/css/font-awesome.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="../css/zabuto_calendar.css">
<link rel="stylesheet" type="text/css" href="../js/gritter/css/jquery.gritter.css" />
<link rel="stylesheet" type="text/css" href="../lineicons/style.css">
<link href="../css/style.css" rel="stylesheet">
<link href="../css/style-responsive.css" rel="stylesheet">
<link href="../css/custom.css" rel="stylesheet">
<script src="../js/chart-master/Chart.js"></script>

<%- include('header'); %>
<%- include('sidebar', user); %>
<section id="main-content">
  <section class="wrapper">
    <div class="row">
        <div class="col-lg-9 main-chart">
        	<h3><i class="fa fa-angle-right"></i> Détails du projet</h3>
        	<div class="row mt">
        		<div class="col-lg-12">

              <div class="col-lg-6">
                <div class="green-panel pn">
                  <div class="green-header">
                    <h5><%= project[0].title %></h5>
                  </div>
                  <div class="chart mt" style="font-size: 20px;width: 95%;">
                    <%= project[0].description %>
                  </div>
                  <p class="mt bottom">Le projet prends fin le <b><%= project[0].beginDate %></b></p>
                </div>
              </div>

              <div class="col-lg-6">
                <div class="green-panel pn">
  								<div class="green-header">
  									<h5>SUIVI DES JETONS</h5>
  								</div>
  								<div class="chart mt" style="font-size: 70px">
  									00:45
  								</div>
  								<p class="mt bottom">Temps-jeton disponible</p>
  							</div>
              </div>

              <div class="col-lg-12 mt">
                <div class="showback">
        					<h4><i class="fa fa-angle-right"></i> DEMANDER DE L'AIDE</h4>
                  <div class="form-group">
                      <label class="col-sm-2 col-sm-2 control-label">Choisissez un intervenant :</label>
                        <div class="col-sm-10">

                          <ul class="list-group list-group-flush">
                            <% intervenants.forEach(function(intervenant){ %>

                                <li class="list-group-item">

                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="intervenant[]" value="<%= intervenant.id %>">
                                    <label class="form-check-label">
                                      <div>
                                        <img class="img-circle ml10" src="<%= intervenant.avatar %>" width="35px" height="35px"> <%= intervenant.firstName %> <%= intervenant.surname %>
                                      </div>
                                    </label>
                                  </div>

                                </li>

                          <% }); %>
                          </ul>
                      </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label" for="msg">Entrez votre message :</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" id="msg" rows="10" style="margin-bottom: 10px;"></textarea>
                    </div>
                  </div>
                  <button class="btn btn-theme btn-block" href="#" type="submit"><i class="fa fa-send left"></i>&nbsp; Envoyer le message</button>
          			</div>
              </div>

              <div class="col-lg-12 mt">
                <div class="showback">
                  <h4><i class="fa fa-angle-right"></i> UTILISATION DES JETONS</h4>
                  <div class="row">

                    <div class="col-md-4 mb">
                      <div class="darkblue-panel pn">
                        <div class="darkblue-header">
                          <h5>Question à Benjamin TOURMAN</h5>
                        </div>
                        <span class="label label-success">Traitée</span>
                        <h1><i class="fa fa-question fa-2x"></i></h1>
                        <p>Question initilament posée le 02/04/2018</p>
                        <footer>
                          <div class="centered">
                            <h5>00:15 temps-jetons utilisés</h5>
                          </div>
                        </footer>
                      </div>
                    </div>

                    <div class="col-md-4 mb">
                      <div class="darkblue-panel pn">
                        <div class="darkblue-header">
                          <h5>Question à Frédéric REINOLD</h5>
                        </div>
                        <span class="label label-warning">En cours de réponse</span>
                        <h1><i class="fa fa-question fa-2x"></i></h1>
                        <p>Question initilament posée le 26/03/2018</p>
                        <footer>
                          <div class="centered">
                            <h5></h5>
                          </div>
                        </footer>
                      </div>
                    </div>

                    <div class="col-md-4 mb">
                      <div class="darkblue-panel pn">
                        <div class="darkblue-header">
                          <h5>Question à Mathias BRAUX</h5>
                        </div>
                        <span class="label label-danger">Non traitée</span>
                        <h1><i class="fa fa-question fa-2x"></i></h1>
                        <p>Question initilament posée le 09/04/2018</p>
                        <footer>
                          <div class="centered">
                            <h5></h5>
                          </div>
                        </footer>
                      </div>
                    </div>

                  </div>
                </div>
              </div>

          </div>
        </div>
      </div>
      <%- include('rightsidebar'); %>
      <%- include('footer'); %>
  </section>
  <script src="../js/bootstrap.min.js"></script>
  <script class="include" type="text/javascript" src="../js/jquery.dcjqaccordion.2.7.js"></script>
  <script src="../js/jquery.scrollTo.min.js"></script>
  <script src="../js/jquery.nicescroll.js" type="text/javascript"></script>
  <script src="../js/jquery.sparkline.js"></script>
  <script src="../js/common-scripts.js"></script>
  <script type="text/javascript" src="../js/gritter/js/jquery.gritter.js"></script>
  <script type="text/javascript" src="../js/gritter-conf.js"></script>
  <script src="../js/sparkline-chart.js"></script>
  <script src="../js/zabuto_calendar.js"></script>
