<script>
    $('#formLogin').validate({ // initialize the plugin
        rules: {
            'user[email]': {
                required: true,
                email: true
            },
            'user[password]': {
                required: true,
                minlength: 3
            }
        },
        messages: {
            'user[email]': {
                required: 'Veuillez préciser votre email',
                email: 'Adresse mail incorrecte'
            },
            'user[password]': {
                required: 'Veuillez préciser votre nouveau mot de passe',
                minlength: 'Votre nouveau mot de passe doit contenir au moins 3 caractères'
            }
        }
    })
    $('#formRecovery').validate({ // initialize the plugin
        rules: {
            'user[recoveryMail]': {
                required: true,
                email: true
            }
        },
        messages: {
            'user[recoveryMail]': {
                required: 'Veuillez préciser votre email',
                email: 'Adresse mail incorrecte'
            }
        }
    })
</script>