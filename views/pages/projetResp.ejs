<%- include('header'); %>
<%- include('sidebar', user); %>
<section id="main-content">
  <section class="wrapper">
    <div class="row">
        <div class="col-lg-9 main-chart">
        	<h3><i class="fa fa-angle-right"></i> Détails du projet</h3>
        	<div class="row mt">
        		<div class="col-lg-12">

              <div class="col-lg-6">
                <div class="green-panel pn">
                  <div class="green-header">
                    <h5><%= project.title %></h5>
                  </div>
                  <div class="chart mt" style="font-size: 20px;width: 95%;">
                    <%= project.description %>
                  </div>
                  <p class="mt bottom">Le projet prends fin le <b><%= project.beginDate %></b></p>
                </div>
              </div>

              <div class="col-lg-6">
                <div class="green-panel pn">
  								<div class="green-header">
  									<h5>SUIVI DES JETONS</h5>
  								</div>
  								<div class="chart mt" style="font-size: 70px">
  									 <%= jetonsUtilises %>
  								</div>
  								<p class="mt bottom">Temps-jeton total utilisé</p>
  							</div>
              </div>

              <div class="col-lg-12 mt">
                <div class="showback">
                  <h4><i class="fa fa-angle-right"></i> ÉQUIPES </h4>
                  <div class="row">
                    <% var i = 0; %>
                    <% teams.forEach(function(team){ %>
                      <% i++ %>
                        <div class="col-md-4 mb">
                          <div class="darkblue-panel pn">
                            <div class="darkblue-header">
                              <h5>Équipe <%= i %></h5>
                            </div>
                            <ul>
                              <% team.membres.forEach(function(membre){ %>
                                <li><%= membre.surname %> <%= membre.firstName %></li>
                              <% }) %>
                            </ul>
                            <footer>
                            </footer>
                          </div>
                        </div>
                    <% }); %>
                  </div>
                </div>
              </div>

          </div>
        </div>
      </div>
  </section>
        <%- include('footer'); %>
